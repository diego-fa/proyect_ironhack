<!DOCTYPE html>
<html>
  <head>
    <title>RentandRide</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Rent&Ride</a>
        </div>
        <ul class="nav navbar-nav">
          <li class="active"><a href="/">Home</a></li>
          <li> <%= link_to 'estates', estates_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <p><%= link_to 'Log-out', destroy_user_session_path, method:'DELETE', class: "glyphicon glyphicon-log-out"  %></p>
          <% else %>
            <p>
              <%= link_to 'Sign-up', new_user_registration_path, class: "glyphicon glyphicon-user" %> |
              <%= link_to 'Sign_in', new_user_session_path, class: "glyphicon glyphicon-log-in" %>
            </p>
        
          <% end %>
        </ul>
      </div>
    </nav>
    
    <div class="container">
      
     
      <div class="row">
       
          

      </div>
    
      <div class="entry">
        <%= yield %>
      </div>
      
      <div class="row panel-footer" id="footer">
      
      </div>
    </div>
  </body>
</html>
